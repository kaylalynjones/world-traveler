extends ../shared/template
block content
  h1.page-title Where have you been?
  .row
    .col-xs-3
    .col-xs-6
      form.form(role="form", method='post', action='/vacations')
        input#lat(type='hidden', name='lat')
        input#lng(type='hidden', name='lng')
        .form-group
          label(for="name") Destination
          input.form-control.input-lg#name(type='text', name='name', autofocus=true, placeholder='Super Awesome Place')
        .form-group
          label(for="start") Start Date
          input.form-control.input-lg#start(type='date', name='start')
        .form-group
          label(for="end") End Date
          input.form-control.input-lg#end(type='date', name='end')
        .form-group
          button.btn.btn-primary.btn-lg(type='submit') Add a Vacation
    .col-xs-3
block scripts
  script(src='/js/user/new-vacation.js')

